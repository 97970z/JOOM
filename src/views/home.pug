doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="../public/app.css")
    body
        header
            h1 201744053 TCP/IP
        main
            div#welcome
                form#welcomeForm
                    input(placeholder="채팅방 이름", required, type="text")
                    button Enter Room
                h4 📢 채팅방 목록
                ul

            div#myStream
                div#room
                    h3
                    ul#scroll
                    div.hr
                    form#msg
                        input(placeholder="메시지를 입력하세요.", required, type="text")
                        button Send

        script(src="/socket.io/socket.io.js")
        script(src="/public/app.js")
        script(src="/public/bgColor.js")