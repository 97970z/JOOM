doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title JOOM
        link(rel="stylesheet", href="../public/app.css")
    body 
        h1 201744053 TCP/IP Final TEST

        div#welcome
            div#menu
                form#welcomeForm
                    input(placeholder="room name", required, type="text")
                    button Create Room
                p The room exists.
        main
            div#roomTitle
            div#call
                div#videos
                    video#myFace(autoplay, playsinline, width="330", height="250")
                    video#peerFace(autoplay, playsinline, width="330", height="250")
                div#myStream
                    div#chat
                        ul#scroll
                        div.hr
                        form#chatForm
                            input(placeholder="chat", required, type="text")
                            button Send

                    div#roomMenu
                        button#mute 음소거
                        button#camera 카메라 끄기
                        select#cameras

        script(src="/socket.io/socket.io.js") 
        script(src="/public/app.js") 
        script(src="/public/bgColor.js")